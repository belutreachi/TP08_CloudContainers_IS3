{
  "name": "tiktask",
  "version": "1.0.0",
  "description": "TikTask - Task management web application with Node.js and PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "node -e \"console.log('✅ Build OK (JS app, no compilation step)')\"",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "test:ci": "cross-env NODE_ENV=test jest --runInBand --ci --coverage --reporters=default --reporters=jest-junit",
    "cy:run": "cypress run",
    "cy:open": "cypress open"
  },
  "keywords": [
    "task",
    "todo",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "faker": "^6.6.6",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "cross-env": "^10.1.0",
    "cypress": "^15.6.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.1.4"
  },
  "jest-junit": {
    "outputDirectory": "./test-results",
    "outputName": "junit.xml",
    "ancestorSeparator": " › ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}
